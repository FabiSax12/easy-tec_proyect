{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "version": 2,
  "buildCommand": "pnpm run build --filter=server",
  "outputDirectory": "apps/server/dist",
  "installCommand": "pnpm install",
  "builds": [
    {
      "src": "apps/server/dist/main.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "apps/server/dist/main.js"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}