{
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/apps/server/(.*)"
    }
  ],
  "functions": {
    "apps/server/src/main.ts": {
      "includeFiles": "dist/apps/server/**"
    }
  },
  "build": {
    "env": {
      "VERCEL_NATIVE_BUILD": "1",
      "ENABLE_EXPERIMENTAL_COREPACK": "1"
    }
  },
  "crons": [
    {
      "path": "/apps/scheduler/index.html",
      "schedule": "0 0 * * *"
    }
  ]
}