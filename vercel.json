{
  "version": 2,
  "builds": [
    {
      "src": "apps/server/dist/main.js",
      "use": "@vercel/node@3",
      "config": {
        "distDir": "apps/server/dist",
        "maxDuration": 30
      }
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/api/(.*)",
      "dest": "/apps/server/dist/main.js",
      "methods": [
        "GET",
        "POST",
        "PUT",
        "PATCH",
        "DELETE",
        "OPTIONS"
      ]
    },
    {
      "src": "/(.*)",
      "dest": "/apps/scheduler/dist/index.html"
    }
  ]
}